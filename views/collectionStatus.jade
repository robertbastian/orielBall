doctype html
html
  head
    title Oriel College Commemoration Ball 2015 - Ticket collection status
    include imports

    script(type="text/javascript" src="https://www.google.com/jsapi")
    script(type="text/javascript").
      google.load("visualization", "1", {packages:["corechart"]});
      google.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable(!{JSON.stringify(data)},true);
        var options = {
          pieHole: 0.6,
          legend: 'none',
          slices: {
            0: { color: 'gray', offset: 0.1 },
            1: { color: 'green', offset: 0.1 },
            2: { color: 'green', offset: 0.1 },
            3: { color: 'green', offset: 0.1 },
            4: { color: 'green', offset: 0.1 },
            5: { color: 'green', offset: 0.1 }
          }

        };

        var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
        chart.draw(data, options);
      }
  body
    include header
    .container-fluid
      .row
        .col-xs-12.text-center(style='margin-top:100px')
          h1 Collected tickets
          #donutchart(style="width: 100%; height:600px;")

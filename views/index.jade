    .modal.fade#aboutModal(tabindex="-1",role="dialog")
      .modal-dialog
        .modal-content.text-center
          .modal-header
            button.close(type="button",data-dismiss="modal")
              span(aria-hidden="true")&times;
              span.sr-only Close
            h3.modal-title(style='margin-left:18px;') Committee
          if committee
            table.table.table-condensed.modal-body
             - for (var i = 0; i < 16; i = i + 2) {
               tr
                td(width='50%')
                  a(href='mailto:'+committee[i]['email'])
                    h4 !{committee[i]['position']}
                      br
                      small !{committee[i]['name']}
                td(width='50%')
                  a(href='mailto:'+committee[i+1]['email'])
                    h4 !{committee[i+1]['position']}
                      br
                      small !{committee[i+1]['name']}
                tr
             - }
          else
            .modal-body
              h4 An error occured while loading the committee.
    

